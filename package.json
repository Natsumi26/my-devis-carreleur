{
  "name": "my-devis-carreleur",
  "productName": "MesDevisFactures",
  "version": "1.0.0",
  "description": "Gestion devis/factures pour un carreleur",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "build": "electron-builder"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "appId": "com.mesdevisfactures.app",
    "productName": "Mes DevisFactures",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "db.js",
      "renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mes DevisFactures",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Marion",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-wix": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "electron-forge-maker-nsis": "^26.0.12"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.2",
    "sqlite3": "^5.1.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Natsumi26/my-devis-carreleur.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/Natsumi26/my-devis-carreleur/issues"
  },
  "homepage": "https://github.com/Natsumi26/my-devis-carreleur#readme"
}
